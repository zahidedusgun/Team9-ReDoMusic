
<div class="d-flex justify-content-center mt-5">
    <div class="card" style="width: 500px; height: 450px; border-color:#B2B2B2; box-shadow: 0 4px 56px rgba(0, 0, 0, 0.1);">
        <div class="card-header" style=" height:150px;">
            <h2 class="text-center" >Add Brand Part</h2>
        </div>
        <form method="post" style="padding: 35px;">
            <div class="mb-4">
                <label class="form-label"><bold>Brand Name:</bold></label>
                <input type="text" class="form-control" placeholder="Enter Brand Name" name="brandName">
            </div>
            <div class="mb-4">
                <label class="form-label">Description:</label>
                <input type="text" class="form-control" placeholder="Enter a Description" name="brandDescription">
            </div>
            <div class="mb-4">
                <label class="form-label">Address:</label>
                <input type="text" class="form-control" placeholder="Enter Address" name="brandAdress">
            </div>
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-success">Add Brand</button>
            </div>
        </form>
    </div>
</div>