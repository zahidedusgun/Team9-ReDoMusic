@model List<ReDoMusic.Domain.Entities.Instrument>
<head>
    <style>
        .row {
            display: flex;
        }
        .column {
            flex: 1;
            padding: 10px;
        }

        .card {
            margin: 15px;
            border-color: #B2B2B2;
            position: relative;
            transition: transform 0.1s;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); /* Gölge ekleniyor */
        }

            .card:hover {
                transform: scale(1.1);
            }

        h2 {
            display: flex;
            justify-content: center;
            align-items: center;
            margin-top: 50px;
            margin-bottom:50px;
        }
    </style>
</head>

<body>
<h2>Instruments</h2>
<div class="row" style="height: 50px; width: 500px; margin: -5px;">

    @foreach (var product in Model)
    {
        <div class="card column">
            <img class="card-img-top" src="@product.PictureUrl" alt="Card image">
            <div class="card-body">
                <h4 class="card-title">@product.Name</h4>
                <p class="card-text">@product.Description</p>
                    <a href="/instrument/inspect/@product.Id" class="btn btn-primary"><i class="fa-solid fa-arrow-right"></i></a>
            </div>
        </div>
    }
</div>

    <script>
        const cards = document.querySelectorAll('.card');
        cards.forEach(card => {
            let hovered = false;

            card.addEventListener('mouseenter', () => {
                if (!hovered) {
                    card.style.transform = 'scale(1.1)';
                    hovered = true;
                }
            });

            card.addEventListener('mouseleave', () => {
                card.style.transform = 'scale(1)';
                hovered = false;
            });
        });
    </script>


</body>