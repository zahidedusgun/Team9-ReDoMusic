﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -ReDoMusic.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ReDoMusic.MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<style>
    .RightPart {
        margin-left: 50px;
        display: flex;
        align-items: center;
    }

        .RightPart i {
            font-size: 24px; /* İkonların font boyutunu büyütün */
            margin-right: 10px; /* İkonlar arasındaki boşluğu ayarlayın */
        }

        .RightPart span {
            font-size: 24px; /* Yazının font boyutunu büyütün */
        }

</style>

<body>
    <div class="head mt-10 mb-10">
    <div class="d-flex align-items-center justify-content-center mt-10 mb-10" style="height: 100px;">
        <div class="navbar-brands m d-flex align-items-center">
            <a class="navbar-brand m d-flex justify-content-between align-items-center" asp-area="" asp-controller="instrument" asp-action="Index">
                <img src="https://www.do-re.com.tr/Images/logo-30yil.svg?v=1" width="250px" />
            </a>
        </div>
        <div class="input-group mt-5" style="height: 40px; width: 500px; border-radius: 30px; margin-left: 50px;">
            <input type="text" class="form-control" placeholder="Search for items" style="border-right: 1px solid white; border-radius: 30px 0 0 30px; padding-right: 40px;" />
            <div class="input-group-prepend">
                <span class="input-group-text" style="background-color: white; height: 40px; border-radius: 0 30px 30px 0;">
                    <i class="fas fa-search"></i>
                </span>
            </div>
        </div>
        <div class="RightPart mt-5">
            <i class="fa-regular fa-user"></i> <!-- İkonun font boyutu büyütüldü -->
            <span>Enter or Register</span> <!-- Yazının font boyutu büyütüldü -->
            <i class="fa-solid fa-basket-shopping" style="margin-left: 50px;"></i>
            <span>Basket</span>
        </div>
    </div>
    </div>

<header class="mt-3" >
        <nav class="navbar navbar-dark bg-dark navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow">
        <div class="container-fluid">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-center">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Add
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="AddCategory">Add Category</a>
                            </li>
                            <hr />
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Brand" asp-action="AddBrand">Add Brand</a>
                            </li>
                            <hr />
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Instrument" asp-action="Add">Add Instrument</a>
                            </li>
                        </ul>
                    </li>
                    <div class="vertical-line"></div>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role a-button" data-bs-toggle="dropdown" aria-expanded="false">
                            List Items
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="CategoryIndex">List Category</a>
                            </li>
                            <hr />
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Brand" asp-action="Index">List Brands</a>
                            </li>
                            <hr />
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Instrument" asp-action="index">List Instruments</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>