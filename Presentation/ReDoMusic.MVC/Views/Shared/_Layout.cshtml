﻿<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] -ReDoMusic.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ReDoMusic.MVC.styles.css" asp-append-version="true" />
</head>
<body>
<div class="head">
<a class="navbar-brand mt-5" asp-area="" asp-controller="instrument" asp-action="Index"><img src="https://www.do-re.com.tr/Images/logo-30yil.svg?v=1" width="250px"/></a>
<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
        aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>
<input/>
    </div>
<header class="mt-3">
    <nav class="navbar navbar-dark bg-dark navbar-expand-sm navbar-toggleable-sm border-bottom box-shadow ">
        <div class="container-fluid">

            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Add
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="AddCategory">Add Category</a>
                            </li>
                            <hr/>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Brand" asp-action="AddBrand">Add Brand</a>
                            </li>
                            <hr/>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Instrument" asp-action="Add">Add Instrument</a>
                            </li>
                        </ul>
                    </li>
                        <div class="vertical-line"></div>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarScrollingDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            List Items
                        </a>
                        <ul class="dropdown-menu" aria-labelledby="navbarScrollingDropdown">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Category" asp-action="CategoryIndex">List Category</a>
                            </li>
                            <hr/>
                            <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Brand" asp-action="Index">List Brands</a>
                            </li>
                            <hr/>
                            <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Instrument" asp-action="index">List Instruments</a>
                            </li>
                        </ul>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Category" asp-action="AddCategory">Add Category</a>
                    </li>
                    <hr/>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Brand" asp-action="AddBrand">Add Brand</a>
                    </li>
                    <hr/>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Instrument" asp-action="Add">Add Instrument</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>

<footer class="border-top footer text-muted">
    <div class="container">
        Team9 ReDoMusic Project <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
</footer>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)
</body>
</html>